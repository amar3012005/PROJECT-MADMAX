# MADMAX AI Agentic Aerial Robotics Configuration

# MAVLink Connection
# For Pixhawk 6C via USB: /dev/ttyUSB0 or /dev/ttyACM0
# For SITL testing: tcp:127.0.0.1:5760
# For network connection: udp:192.168.1.100:14550
MAVLINK_CONNECTION=/dev/ttyUSB0
MAVLINK_BAUD_RATE=57600

# OpenAI API Configuration (optional - system works without it)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Web Server Configuration
WEB_HOST=0.0.0.0
WEB_PORT=5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/madmax.log

# Safety Configuration
MAX_ALTITUDE=120  # Maximum altitude in meters (FAA limit)
MAX_SPEED=20      # Maximum speed in m/s
MIN_BATTERY=20    # Minimum battery percentage for operations

# Hardware Configuration (for future use)
JETSON_MODEL=orin_nano
PIXHAWK_MODEL=6c
CAMERA_ENABLED=true
LIDAR_ENABLED=false
